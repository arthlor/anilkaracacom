---
import MainLayout from '../layouts/MainLayout.astro';

const experience = [
  {
    title: "Data Journalist",
    company: "Freelance",
    period: "2019 - Present",
    description: "Creating data-driven stories and interactive visualizations"
  },
  // Add more experience entries
];

const skills = [
  { category: "Data & Analysis", items: ["Python", "Pandas", "NumPy", "SciPy", "SQL"] },
  { category: "Visualization", items: ["D3.js", "Plotly", "Matplotlib", "Flourish"] },
  { category: "Web Development", items: ["React", "Next.js", "Node.js", "Astro", "TypeScript"] },
  { category: "Tools", items: ["Git", "Cursor", "VS Code", "Figma"] },
  { category: "Other", items: ["Copywriting", "Video Production", "Drone Piloting"] },
];
---

<MainLayout title="About" description="Learn more about Anƒ±l Karaca - Data Journalist and Web Developer">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-surface/50 to-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <div class="flex-shrink-0">
          <div class="w-48 h-48 rounded-full bg-gradient-to-br from-primary/30 to-secondary/30 flex items-center justify-center glow-border">
            <span class="text-6xl">üë®‚Äçüíª</span>
          </div>
        </div>
        <div>
          <h1 class="text-4xl sm:text-5xl font-display font-bold mb-4">
            <span class="text-gradient">About Me</span>
          </h1>
          <p class="text-xl text-text-muted max-w-2xl mb-6">
            I'm a data journalist and web developer with over 5 years of experience 
            transforming complex datasets into compelling stories.
          </p>
          <div class="flex flex-wrap gap-4">
            <a 
              href="/Anil_Karaca_CV.pdf"
              class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-background font-semibold rounded-lg hover:bg-primary-light transition-all"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Download CV
            </a>
            <a 
              href="/contact"
              class="inline-flex items-center gap-2 px-6 py-3 glass glow-border rounded-lg font-semibold hover:bg-surface-elevated transition-all"
            >
              Get in Touch
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bio -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-invert prose-lg max-w-none">
        <p class="text-text-muted leading-relaxed">
          With a background in journalism and a passion for technology, I specialize in 
          turning raw data into meaningful narratives. My work spans from interactive 
          web applications to data visualizations that help audiences understand 
          complex topics at a glance.
        </p>
        <p class="text-text-muted leading-relaxed">
          I'm particularly interested in political data analysis, social trends, and 
          creating tools that make information more accessible. When I'm not coding 
          or writing, you can find me flying drones or exploring new ways to 
          visualize data.
        </p>
      </div>
    </div>
  </section>

  <!-- Skills -->
  <section class="py-16 bg-surface/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-display font-bold text-center mb-12">
        <span class="text-gradient">Skills & Technologies</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {skills.map((group) => (
          <div class="glass glow-border rounded-xl p-6">
            <h3 class="text-lg font-display font-bold text-primary mb-4">
              {group.category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {group.items.map((skill) => (
                <span class="text-sm px-3 py-1 bg-surface-elevated text-text-muted rounded-full">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


---
import MainLayout from '../layouts/MainLayout.astro';
import Icon from '../components/Icon.astro';
---

<MainLayout title="Contact" description="Get in touch with Anıl Karaca">
  <section class="pt-32 pb-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-surface/50 to-background"></div>
    <div class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-primary/5 rounded-full blur-[120px]"></div>
    
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="text-primary text-sm font-medium uppercase tracking-widest mb-4 block">Contact</span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold mb-6">
          Get in Touch
        </h1>
        <p class="text-xl text-text-muted max-w-2xl mx-auto">
          Have a project in mind? Want to collaborate on a data story? 
          I'd love to hear from you.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">
        <!-- Contact Form -->
        <div class="lg:col-span-3 glass glow-border rounded-3xl p-8 md:p-10">
          <h2 class="text-xl font-display font-bold text-text mb-8">Send a Message</h2>
          <form 
            name="contact" 
            method="POST" 
            data-netlify="true"
            class="space-y-6"
          >
            <input type="hidden" name="form-name" value="contact" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-text-muted mb-2">
                  Name
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3.5 bg-surface-elevated border border-primary/20 rounded-xl focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none text-text transition-all placeholder:text-text-muted/50"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-text-muted mb-2">
                  Email
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3.5 bg-surface-elevated border border-primary/20 rounded-xl focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none text-text transition-all placeholder:text-text-muted/50"
                  placeholder="you@example.com"
                />
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-text-muted mb-2">
                Subject
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3.5 bg-surface-elevated border border-primary/20 rounded-xl focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none text-text transition-all placeholder:text-text-muted/50"
                placeholder="What's this about?"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-text-muted mb-2">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3.5 bg-surface-elevated border border-primary/20 rounded-xl focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none text-text transition-all resize-none placeholder:text-text-muted/50"
                placeholder="Tell me about your project..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full group inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary text-background font-semibold rounded-xl hover:bg-primary-light transition-all hover:scale-[1.02]"
            >
              Send Message
              <Icon name="arrow-right" size={18} class="group-hover:translate-x-1 transition-transform" />
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="lg:col-span-2 space-y-6">
          <div class="glass glow-border rounded-3xl p-8">
            <h2 class="text-lg font-display font-bold text-text mb-6">Quick Links</h2>
            <div class="space-y-4">
              <a 
                href="mailto:hello@anilkaraca.com"
                class="flex items-center gap-4 p-4 rounded-2xl hover:bg-surface-elevated transition-all group"
              >
                <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                  <Icon name="mail" size={22} class="text-primary" />
                </div>
                <div>
                  <div class="text-sm text-text-muted">Email</div>
                  <div class="text-text font-medium">hello@anilkaraca.com</div>
                </div>
              </a>

              <a 
                href="https://www.linkedin.com/in/anil-karaca/"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-4 p-4 rounded-2xl hover:bg-surface-elevated transition-all group"
              >
                <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                  <Icon name="linkedin" size={22} class="text-primary" />
                </div>
                <div>
                  <div class="text-sm text-text-muted">LinkedIn</div>
                  <div class="text-text font-medium">@anil-karaca</div>
                </div>
              </a>

              <a 
                href="https://x.com/anilkaraca17"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-4 p-4 rounded-2xl hover:bg-surface-elevated transition-all group"
              >
                <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                  <Icon name="twitter" size={22} class="text-primary" />
                </div>
                <div>
                  <div class="text-sm text-text-muted">Twitter</div>
                  <div class="text-text font-medium">@anilkaraca17</div>
                </div>
              </a>
            </div>
          </div>

          <div class="glass glow-border rounded-3xl p-8">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <span class="text-xl">⚡</span>
              </div>
              <div>
                <h3 class="text-lg font-display font-bold text-text mb-2">Quick Response</h3>
                <p class="text-text-muted text-sm leading-relaxed">
                  I typically respond within 24-48 hours. For urgent matters, 
                  reach out via Twitter DM.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

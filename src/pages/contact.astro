---
import MainLayout from '../layouts/MainLayout.astro';
import Icon from '../components/Icon.astro';

const socialLinks = [
  { 
    name: 'Email',
    handle: 'anilkaraca140@gmail.com',
    href: 'mailto:anilkaraca140@gmail.com',
    icon: 'mail',
    description: 'Best for project inquiries and collaborations',
    primary: true
  },
  { 
    name: 'LinkedIn',
    handle: '@anil-karaca',
    href: 'https://www.linkedin.com/in/anil-karaca/',
    icon: 'linkedin',
    description: 'Professional connections and opportunities'
  },
  { 
    name: 'Twitter / X',
    handle: '@anilkaraca17',
    href: 'https://x.com/anilkaraca17',
    icon: 'twitter',
    description: 'Quick conversations and DMs'
  },
  { 
    name: 'GitHub',
    handle: '@arthlor',
    href: 'https://github.com/arthlor',
    icon: 'github',
    description: 'Open source projects and code'
  },
  { 
    name: 'YouTube',
    handle: '@anil.karaca',
    href: 'https://www.youtube.com/@anil.karaca',
    icon: 'youtube',
    description: 'Videos and documentaries'
  },
];
---

<MainLayout title="Contact" description="Get in touch with AnÄ±l Karaca">
  <section class="pt-32 pb-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-surface/50 to-background"></div>
    <div class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-primary/5 rounded-full blur-[120px]"></div>
    <div class="absolute top-1/3 left-0 w-[400px] h-[400px] bg-secondary/5 rounded-full blur-[100px]"></div>
    
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="text-primary text-sm font-medium uppercase tracking-widest mb-4 block">Contact</span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold mb-6">
          Let's Connect
        </h1>
        <p class="text-xl text-text-muted max-w-2xl mx-auto">
          Have a project in mind? Want to collaborate on a data story? 
          I'd love to hear from you.
        </p>
      </div>

      <!-- Primary Email CTA -->
      <div class="mb-12">
        <a 
          href="mailto:anilkaraca140@gmail.com"
          class="group block glass glow-border rounded-3xl p-8 md:p-12 text-center hover:bg-surface-elevated transition-all duration-300"
        >
          <div class="w-20 h-20 mx-auto mb-6 bg-primary/10 rounded-2xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
            <Icon name="mail" size={40} class="text-primary" />
          </div>
          <h2 class="text-2xl md:text-3xl font-display font-bold text-text mb-3">
            anilkaraca140@gmail.com
          </h2>
          <p class="text-text-muted mb-6">
            Best way to reach me for project inquiries and collaborations
          </p>
          <span class="inline-flex items-center gap-2 text-primary font-semibold group-hover:gap-3 transition-all">
            Send me an email
            <Icon name="arrow-right" size={18} class="group-hover:translate-x-1 transition-transform" />
          </span>
        </a>
      </div>

      <!-- Social Links Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {socialLinks.filter(link => !link.primary).map((link) => (
          <a 
            href={link.href}
            target={link.icon === 'mail' ? undefined : '_blank'}
            rel={link.icon === 'mail' ? undefined : 'noopener noreferrer'}
            class="group glass glow-border rounded-2xl p-6 hover:bg-surface-elevated transition-all duration-300"
          >
            <div class="flex items-start gap-4">
              <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors flex-shrink-0">
                <Icon name={link.icon} size={26} class="text-primary" />
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-display font-bold text-text mb-1">
                  {link.name}
                </h3>
                <p class="text-primary font-medium mb-2">
                  {link.handle}
                </p>
                <p class="text-text-muted text-sm">
                  {link.description}
                </p>
              </div>
              <Icon name="arrow-right" size={18} class="text-text-muted group-hover:text-primary group-hover:translate-x-1 transition-all mt-1" />
            </div>
          </a>
        ))}
      </div>

      <!-- Quick Response Note -->
      <div class="mt-12 text-center">
        <div class="inline-flex items-center gap-3 px-6 py-4 glass rounded-2xl">
          <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-text-muted">
            I typically respond within <strong class="text-text">24-48 hours</strong>
          </span>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

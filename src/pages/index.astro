---

<MainLayout title="Home" description="Anƒ±l Karaca - Data Journalist, Developer, and Multimedia Creator">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center pt-16 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-br from-background via-surface to-background"></div>
    <div class="absolute top-1/4 left-1/4 w-[500px] h-[500px] bg-primary/5 rounded-full blur-[100px] animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-[400px] h-[400px] bg-secondary/5 rounded-full blur-[100px] animate-pulse delay-1000"></div>
    
    <!-- Grid Pattern Overlay -->
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#14b8a608_1px,transparent_1px),linear-gradient(to_bottom,#14b8a608_1px,transparent_1px)] bg-[size:4rem_4rem]"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-surface-elevated border border-primary/20 mb-8 animate-fade-in">
        <span class="w-2 h-2 bg-primary rounded-full animate-pulse"></span>
        <span class="text-sm text-text-muted">Available for projects</span>
      </div>
      
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-display font-bold mb-6 animate-fade-in">
        <span class="text-gradient">Anƒ±l Karaca</span>
      </h1>
      
      <p class="text-xl sm:text-2xl text-text-muted max-w-3xl mx-auto mb-4 animate-slide-up">
        Data Journalist ‚Ä¢ Developer ‚Ä¢ Multimedia Creator
      </p>
      
      <p class="text-lg text-text-muted/70 max-w-2xl mx-auto mb-12 animate-slide-up">
        Transforming data into compelling stories. Building digital experiences that inform and inspire.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up">
        <a 
          href="/projects" 
          class="group inline-flex items-center gap-2 px-8 py-4 bg-primary text-background font-semibold rounded-xl hover:bg-primary-light transition-all duration-300 hover:scale-105 shadow-lg shadow-primary/25"
        >
          View Projects
          <Icon name="arrow-right" size={18} class="group-hover:translate-x-1 transition-transform" />
        </a>
        <a 
          href="/contact" 
          class="inline-flex items-center gap-2 px-8 py-4 glass glow-border rounded-xl font-semibold hover:bg-surface-elevated transition-all duration-300"
        >
          Get in Touch
        </a>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
      <div class="flex flex-col items-center gap-2 text-text-muted/50">
        <span class="text-xs uppercase tracking-widest">Scroll</span>
        <Icon name="arrow-down" size={20} class="animate-bounce" />
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-surface/50 via-background to-background"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="text-primary text-sm font-medium uppercase tracking-widest mb-4 block">Expertise</span>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold mb-6">
          Skills & Technologies
        </h2>
        <p class="text-text-muted max-w-2xl mx-auto text-lg">
          A diverse toolkit for telling stories through data, code, and media
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {skills.map((skill, i) => (
          <div 
            class="group glass glow-border rounded-2xl p-8 hover:bg-surface-elevated transition-all duration-500 hover:-translate-y-1"
            style={`animation-delay: ${i * 100}ms`}
          >
            <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-6 group-hover:bg-primary/20 group-hover:scale-110 transition-all duration-300">
              <Icon name={skill.icon} size={28} class="text-primary" />
            </div>
            <h3 class="text-xl font-display font-bold text-text mb-3 group-hover:text-primary transition-colors">
              {skill.name}
            </h3>
            <p class="text-text-muted text-sm leading-relaxed">
              {skill.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="py-32 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-16">
        <div>
          <span class="text-primary text-sm font-medium uppercase tracking-widest mb-4 block">Portfolio</span>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold">
            Featured Projects
          </h2>
        </div>
        <a 
          href="/projects" 
          class="mt-6 md:mt-0 group inline-flex items-center gap-2 text-primary hover:text-primary-light transition-colors"
        >
          View all projects
          <Icon name="arrow-right" size={18} class="group-hover:translate-x-1 transition-transform" />
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project, i) => (
          <a 
            href={project.link} 
            target="_blank" 
            rel="noopener noreferrer"
            class="group glass rounded-2xl overflow-hidden hover:scale-[1.02] transition-all duration-500 border border-primary/10 hover:border-primary/30"
            style={`animation-delay: ${i * 100}ms`}
          >
            <div class="aspect-[16/10] bg-gradient-to-br from-primary/10 to-secondary/10 relative overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center">
                <Icon name="chart" size={64} class="text-primary/30 group-hover:scale-110 transition-transform duration-500" />
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-background/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <Icon name="external-link" size={24} class="text-primary" />
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-lg font-display font-bold text-text group-hover:text-primary transition-colors mb-2">
                {project.title}
              </h3>
              <p class="text-text-muted text-sm mb-4 line-clamp-2">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map((tag) => (
                  <span class="text-xs px-3 py-1 bg-primary/10 text-primary rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Apps Showcase -->
  <section class="py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-background via-surface/30 to-background"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="text-primary text-sm font-medium uppercase tracking-widest mb-4 block">Mobile Apps</span>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold mb-6">
          Apps I've Built
        </h2>
        <p class="text-text-muted max-w-2xl mx-auto text-lg">
          Creating mobile experiences with React Native and AI-assisted development
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {apps.map((app) => (
          <div class={`glass glow-border rounded-3xl p-8 bg-gradient-to-br ${app.color}`}>
            <div class="flex items-start gap-6">
              <div class="text-5xl">{app.icon}</div>
              <div class="flex-1">
                <span class="text-xs text-primary font-medium uppercase tracking-wider">{app.tagline}</span>
                <h3 class="text-2xl font-display font-bold text-text mt-1 mb-3">
                  {app.name}
                </h3>
                <p class="text-text-muted text-sm leading-relaxed mb-6">
                  {app.description}
                </p>
                <a 
                  href={app.appStoreUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-5 py-2.5 bg-text text-background font-semibold rounded-xl hover:bg-text/90 transition-all text-sm"
                >
                  <Icon name="apple" size={18} />
                  App Store
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-32 relative">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="glass glow-border rounded-3xl p-12 md:p-16 bg-gradient-to-br from-primary/5 to-secondary/5">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold mb-6">
          Let's Work Together
        </h2>
        <p class="text-text-muted mb-10 max-w-2xl mx-auto text-lg">
          Have a data story to tell? Need an interactive visualization or mobile app? 
          I'd love to hear about your project.
        </p>
        <a 
          href="/contact" 
          class="group inline-flex items-center gap-2 px-10 py-4 bg-primary text-background font-semibold rounded-xl hover:bg-primary-light transition-all duration-300 hover:scale-105 shadow-lg shadow-primary/25"
        >
          Start a Conversation
          <Icon name="arrow-right" size={18} class="group-hover:translate-x-1 transition-transform" />
        </a>
      </div>
    </div>
  </section>
</MainLayout>

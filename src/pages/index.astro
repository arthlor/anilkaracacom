const projects = [
  {
    title: 'Parliament Analysis',
    description: 'Interactive analysis of the Turkish Parliament\'s legislative work',
    image: '/images/projects/parliament.jpg',
    link: 'https://arthlor.github.io/TBMM-Onerge-Analizi/',
    tags: ['D3.js', 'React', 'Data Viz'],
  },
  {
    title: 'Crackdown on CHP',
    description: 'Data journalism project on political persecution in Turkey',
    image: '/images/projects/chp-crackdown.jpg',
    link: 'https://arthlor.github.io/Yargi-Kiskacinda-Demokrasi/',

---
import MainLayout from '../layouts/MainLayout.astro';
import Icon from '../components/Icon.astro';

const skills = [
  { 
    name: 'Data Journalism', 
    description: '5+ years turning complex datasets into compelling news stories',
    icon: 'data-journalism'
  },
  { 
    name: 'Data Visualization', 
    description: 'D3.js, Plotly, Matplotlib, Flourish - interactive charts & dashboards',
    icon: 'data-viz'
  },
  { 
    name: 'Web Development', 
    description: 'React, Next.js, Node.js, Astro - modern responsive websites',
    icon: 'code'
  },
  { 
    name: 'Mobile App Development', 
    description: 'React Native, Expo - building iOS & Android apps with AI tools',
    icon: 'mobile-app'
  },
  { 
    name: 'Python & Data Analysis', 
    description: 'Pandas, NumPy, SciPy - automation and data processing',
    icon: 'python'
  },
  { 
    name: 'Video Production', 
    description: 'Social media content, data-driven video storytelling',
    icon: 'video'
  },
];

const apps = [
  {
    name: 'Ye≈üer',
    tagline: 'Gratitude Journal',
    description: 'A mindfulness app that helps you develop a gratitude practice. Simple journaling, streak tracking, and gentle reminders.',
    appStoreUrl: 'https://apps.apple.com/us/app/ye%C5%9Fer/id6747253728',
    icon: 'üå±',
    color: 'from-emerald-500/20 to-teal-500/20',
  },
  {
    name: 'ChoreUs',
    tagline: 'Gamify Boring Chores',
    description: 'Turn household chores into a fun game. Compete with family members, earn points, and make cleaning enjoyable.',
    appStoreUrl: 'https://apps.apple.com/us/app/choreus-gamify-boring-chores/id6755533194',
    icon: 'üè†',
    color: 'from-violet-500/20 to-purple-500/20',
  },
];

const projects = [
  {
    title: 'Parliament Analysis',
    description: 'Interactive analysis of the Turkish Parliament\'s legislative work',
    link: 'https://arthlor.github.io/TBMM-Onerge-Analizi/',
    tags: ['D3.js', 'React', 'Data Viz'],
  },
  {
    title: 'Crackdown on CHP',
    description: 'Data journalism project on political persecution in Turkey',
    link: 'https://arthlor.github.io/Yargi-Kiskacinda-Demokrasi/',
    tags: ['Data Journalism', 'Interactive'],
  },
  {
    title: 'Attack on √ñzg√ºr √ñzel',
    description: 'Landing page story on the attack against CHP Leader',
    link: 'https://anilkaraca.com/ozgur-ozele-saldiri/',
    tags: ['Storytelling', 'Web Design'],
  },
